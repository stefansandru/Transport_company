<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        x:Class="client.MainWindow"
        Title="Transport Company - Main"
        Width="500"
        Height="700">
  <Grid RowDefinitions="Auto,Auto,*,Auto" Margin="10">
    <!-- Lista curselor -->
  <ListBox x:Name="TripsListBox" Grid.Row="1" Height="300" Margin="0,10,0,10">
     <ListBox.ItemTemplate>
       <DataTemplate>
         <TextBlock Text="{Binding}" />
       </DataTemplate>
     </ListBox.ItemTemplate>
  </ListBox>
    
    <!-- Lista locurilor -->
    <ListBox x:Name="SeatsListBox" Grid.Row="2" Height="300" Margin="0,10,0,10" />

    <!-- Rezervare È™i Logout -->
    <StackPanel Orientation="Horizontal" Grid.Row="3" Spacing="10">
      <TextBox x:Name="ClientNameField" Width="180" Watermark="Client Name" />
      <TextBox x:Name="SeatNumbersField" Width="180" Watermark="Seat Numbers (csv)" />
      <Button x:Name="ReserveButton" Content="Reserve" />
      <Button x:Name="LogoutButton" Content="Logout" />
    </StackPanel>
  </Grid>
</Window>