<?xml version="1.0" encoding="utf-8"?>
<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="client.LoginWindow"
        Title="Login" Width="400" Height="300">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="10">
        <TextBlock Text="Login" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,20"/>
        
        <!-- Username input -->
        <TextBox x:Name="Username" Width="200" Margin="0,5" Watermark="Username"/>

        <!-- Password input -->
        <TextBox x:Name="Password" Width="200" Margin="0,5" PasswordChar="â€¢" Watermark="Password"/>

        <!-- Login button -->
        <Button Content="Login" Width="200" Margin="0,10" Click="OnLoginButtonClick"/>
        
        <!-- Error message (hidden initially) -->
        <TextBlock x:Name="ErrorMessage" Foreground="Red" HorizontalAlignment="Center" IsVisible="False"/>
    </StackPanel>
</Window>